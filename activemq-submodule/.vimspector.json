    // maven project
    "Java Launch": {
      "default": true,
      "adapter": "java-debug-server",
      "configuration": {
        "request": "launch",
        "mainClass": "org.example.${fileBasenameNoExtension}",
        "sourcePaths": [
            "${workspaceRoot}/src/main/java",
            "${workspaceRoot}/../activemq-submodule/main/java"
        ],
        "classPaths": [
            "${workspaceRoot}/target/classes",
            "${workspaceRoot}/../activemq-submodule/target/classes",
            "/Users/nasif/.m2/repository/com/google/code/gson/gson/2.9.1/gson-2.9.1.jar"
        ],
        "args": "",
        "stopOnEntry": true,
        "console": "integratedTerminal",
        "stepFilters": {
          "skipClasses": [ "$$JDK" ]
        }
      },
      "breakpoints": {
        "exception": {
          "caught": "N",
          "uncaught": "N"
        }
      }
    },

    // java -Xdebug -Xrunjdwp:server=y,transport=dt_socket,address=5005,suspend=y Hello
    "Java Attach": {
      // "default": false,
      "adapter": "java-debug-server",
      "configuration": {
        "request": "attach",
        "host": "127.0.0.1",
        "port": "5005"
      },
      "breakpoints": {
        "exception": {
          "caught": "N",
          "uncaught": "N"
        }
      }
    }
  }
}

