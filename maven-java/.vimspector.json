{
  "adapters": {
    "java-debug-server": {
      "name": "vscode-java",
      "port": "${AdapterPort}"
    }
  },
  "configurations": {
    "Java Launch": {
      "default": true,
      "variables": {
        "MainClass": {
          "shell": [ "${HOME}/develop/scripts/bash/replace.sh", "${relativeFile}" ]
        }
      },
      "adapter": "java-debug-server",
      "configuration": {
        "request": "launch",
        "mainClass": "${MainClass}",
        "sourcePaths": [
          "${workspaceRoot}/src/main/java",
          "${workspaceRoot}/../maven-java-submodule/main/java"
        ],
        "classPaths": [
          "${workspaceRoot}/target/classes",
          "${workspaceRoot}/../maven-java-submodule/target/classes",
          "${HOME}/.m2/repository/com/google/code/gson/gson/2.10.1/gson-2.10.1.jar"
        ],
        "args": "",
        "stopOnEntry": true,
        "console": "integratedTerminal",
        "stepFilters": {
          "skipClasses": [ "$$JDK" ]
        }
      },
      "breakpoints": {
        "exception": {
          "caught": "N",
          "uncaught": "N"
        }
      }
    },

    "Java Attach": {
      "adapter": "java-debug-server",
      "configuration": {
        "request": "attach",
        "host": "127.0.0.1",
        "port": "5005"
      },
      "breakpoints": {
        "exception": {
          "caught": "N",
          "uncaught": "N"
        }
      }
    }
  }
}

